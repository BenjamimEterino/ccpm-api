generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id String @id @default(uuid())
  email String @unique
  senha String @db.LongText
  nome String?
  isAdmin Boolean @default(false)
  role roles?
  contacto String?
  formacao String?
  project project[]
}

enum roles {
  admin
  gestor
  encarregado
}

model project {
  id String @id @default(uuid())
  nome String
  local String?
  orcamento Float?
  data_inicio DateTime?
  data_fim DateTime?
  user_id String?
  user user? @relation(fields: [user_id], references: [id])
}

model categoria_func {
  id String @id @default(uuid())
  descricao String
  funcionario funcionario?
}

model funcionario {
  id String @id @default(uuid())
  nome String
  morada String?
  contacto String?
  categ_id String @unique
  categoria categoria_func @relation(fields: [categ_id], references: [id])
}