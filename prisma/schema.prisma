generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id String @id @default(uuid())
  email String @unique
  senha String @db.LongText
  nome String?
  isAdmin Boolean @default(false)
  role roles?
}

enum roles {
  admin
  gestor
  encarregado
}
